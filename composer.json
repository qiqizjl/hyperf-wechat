{
    "name": "naixiaoxin/hyperf-wechat",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "php",
        "hyperf",
        "wechat"
    ],
    "description": "Wechat SDK For Hyperf",
    "autoload": {
        "psr-4": {
            "Naixiaoxin\\HyperfWechat\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "HyperfTest\\": "tests"
        }
    },
    "require": {
        "php": ">=7.2",
        "ext-swoole": ">=4.4",
        "hyperf/guzzle": "~1.1.0|~2.1.0",
        "hyperf/super-globals": "~1.1.0|~2.1.0",
        "overtrue/wechat": "^4.2"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.14",
        "phpstan/phpstan": "^0.10.5",
        "hyperf/testing": "~1.1.0|~2.1.0",
        "swoole/ide-helper": "^4.4"
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "test": "co-phpunit -c phpunit.xml --colors=always",
        "analyze": "phpstan analyse --memory-limit 300M -l 0 ./src",
        "cs-fix": "php-cs-fixer fix $1"
    },
    "extra": {
        "hyperf": {
            "config": "Naixiaoxin\\HyperfWechat\\ConfigProvider"
        }
    }
}
